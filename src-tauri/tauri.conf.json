{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["app", "nsis"],
    "resources": ["resources/*"]
  },
  "productName": "ROM Hack Manager",
  "mainBinaryName": "ROM Hack Manager",
  "version": "2.5.0",
  "identifier": "io.zuccha.rom-hack-manager",
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "ROM Hack Manager",
        "width": 600,
        "height": 700,
        "url": "src/windows/main/Main.html",
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
