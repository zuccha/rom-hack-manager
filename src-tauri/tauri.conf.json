{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ROM Hack Manager",
    "version": "2.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "http": {
        "request": true,
        "scope": ["https://dl.smwcentral.net/*", "https://www.smwcentral.net/*"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "close": true,
        "create": true,
        "show": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.zuccha.rom-hack-manager",
      "resources": ["resources/*"],
      "targets": ["app", "nsis"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "ROM Hack Manager",
        "width": 600,
        "height": 700,
        "url": "src/windows/main/Main.html"
      }
    ]
  }
}
